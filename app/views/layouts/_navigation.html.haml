.navbar-bg
  .fixed.contain-to-grid
    %nav.top-bar
      %ul.title-area
        %li.name
          %h1
            %a.help{:href => "/"}
              - if !user_signed_in?
                HOME
              - else
                = current_user.name
      %section.top-bar-section
        %ul.right
          %li.divider
          %li
            %a
              %a.help{:href => "http://blog.pepemail.co.ke"}
                = t(:blog)
          %li.divider
          %li
            %a{:href => 'coupons'}
              Coupons
          %li.divider
          %li
            %a.sign-up{:href => '#'}
              Sign-up
          %li.divider
          - if Rails.env == "development"
            %li
              - if !user_signed_in?
                %a.log-in{:href => new_user_session_path}
                  Log-in
              - else
                = link_to "Sign out", destroy_user_session_path, :method => :delete
                -#%a.log-out{:href => destroy_user_session_path, :method => :delete}
                  Log-out
