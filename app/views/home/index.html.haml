.splash
  .row
    .large-12.small-10.columns.hero
      %img.logo{:src => "/assets/logo.png"}
  .row
    .large-5.columns.tagline
      %h1
        = t(:banner)
      %small
        = t(:tagline)
    .large-7.columns
      %img{:src => "/assets/large_hero.png"}
.join
  .row
    .large-12.columns

      = form_for(@contact, remote: true) do |f|
        .large-3.columns
          .field
            = f.text_field :name, :placeholder => "Your Name", :required => "required"
        .large-3.columns
          .field
            = f.email_field :email, :placeholder => "Your Email Address", :required => "required"
        .large-6.columns
          = f.submit 'Get in touch', :class => "button radius large"
  .row.signup
    .large-12.columns
      .large-6.columns
        %h3#signup-message
          = t(:signup)
      .large-6.columns

:javascript
  $(function(){
    $("form#new_contact").bind("ajax:success",function(event,data,status,xhr){
      if (status == "success") {
        var contact = $.parseJSON(data);
        $('#signup-message').html("Thank you " + contact.name + " for your interest. We'll let you know when we launch.");
      }
    });
  });